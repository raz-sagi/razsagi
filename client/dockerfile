FROM nginx:alpine

# Copy built files - VERY IMPORTANT: Adjust path if needed!
COPY dist /usr/share/nginx/html # If Webpack output is 'dist'
# OR
# COPY build /usr/share/nginx/html # If Webpack output is 'build'

# Copy custom nginx config (if you have one)
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 8080

CMD ["nginx", "-g", "daemon off;"]